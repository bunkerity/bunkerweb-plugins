{
  "id": "clamav",
  "name": "ClamAV",
  "description": "Automatic scan of uploaded files with ClamAV antivirus engine.",
  "version": "1.7",
  "stream": "no",
  "settings": {
    "USE_CLAMAV": {
      "context": "multisite",
      "default": "no",
      "help": "Activate automatic scan of uploaded files with ClamAV.",
      "id": "use-clamav",
      "label": "Use ClamAV",
      "regex": "^(yes|no)$",
      "type": "check"
    },
    "CLAMAV_HOST": {
      "context": "global",
      "default": "clamav",
      "help": "ClamAV hostname or IP address.",
      "id": "clamav-host",
      "label": "ClamAV host",
      "regex": "^.*$",
      "type": "text"
    },
    "CLAMAV_PORT": {
      "context": "global",
      "default": "3310",
      "help": "ClamAV port.",
      "id": "clamav-port",
      "label": "ClamAV port",
      "regex": "^.*$",
      "type": "text"
    },
    "CLAMAV_TIMEOUT": {
      "context": "global",
      "default": "1000",
      "help": "Network timeout (in ms) when communicating with ClamAV.",
      "id": "clamav-timeout",
      "label": "Network timeout",
      "regex": "^.*$",
      "type": "text"
    }
  }
}
